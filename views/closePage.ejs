<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Awesome Webview</title>
    <style>
        body {
            text-align: center;
            font-family: 'Cairo', Arial, sans-serif;
        }

        #loading-icon {
            display: none;
        }

        #message {
            font-size: 24px;
            color: green;
            display: none;
            font-family: 'Cairo', Arial, sans-serif;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
    <!-- Include the Messenger Extensions SDK -->
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'Messenger'));
    </script>
</head>
<body>
    <div id="loading-icon">
        <!-- Add your loading icon here, e.g., an animated GIF -->
        <img src="../ressources/images/loading.gif" alt="Loading..." width="50" height="50">
    </div>

    <div id="message">
        لقد تم حجز موعدك بنجاح
    </div>
    <p>ستغلق الصفحة عندما تضغط على الزر</p>

    <!-- Add a button for the user to open the webview -->
    <button id="openWebviewBtn">Open Webview</button>

    <script>
        // Messenger Extensions SDK initialization
        window.extAsyncInit = function() {
            // Function to open the webview
            function openWebview() {
                // Use the Messenger Extensions to open the webview
                MessengerExtensions.requestOpenBrowser(function success() {
                    // webview opened successfully
                }, function error(err) {
                    console.log(err);
                });
            }

            // Function to send a message to close the webview
            function closeWebview() {
                // Use the Messenger Extensions to close the webview
                MessengerExtensions.requestCloseBrowser(function success() {
                    // webview closed successfully

                    // Show the loading icon and message
                    document.getElementById('loading-icon').style.display = 'block';
                    document.getElementById('message').style.display = 'block';

                    // Close the browser window (remove the following line if you want to keep the window open)
                    windowClose();
                }, function error(err) {
                    console.log(err);
                });
            }

            // Attach the openWebview function to the button click event
            document.getElementById('openWebviewBtn').addEventListener('click', openWebview);
        };

        // Function to close the window
        function windowClose() {
            window.close();
        }
    </script>
</body>
</html>
