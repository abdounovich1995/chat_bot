<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redirection</title>
    <style>
        body {
            text-align: center;
            font-family: 'Cairo', Arial, sans-serif;
        }

        .error {
            color: red;
        }

        #logContainer {
            margin-top: 20px;
            border: 1px solid #ccc;
            padding: 10px;
            max-height: 200px;
            overflow-y: auto;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
    <!-- Include the Messenger Extensions SDK -->
    <script>
        const messageManager = require('./messageManager'); // Import the messageManager module

        window.extAsyncInit = function () {
            // the Messenger Extensions JS SDK is done loading
            logMessage('Messenger Extensions JS SDK is done loading.');
        };

        // Include messageManager.js
        // Update the path accordingly

        // Function to send a message using the messageManager.js file
        async function sendTextMessage(senderPsid, text) {
            try {
                // Call the sendTextMessage function from messageManager.js
                await messageManager.sendTextMessage(senderPsid, text);
            } catch (error) {
                // Handle errors
                logError('Error sending text message: ' + error.message);
            }
        }

        // Updated sendMessageAndClose function
        async function sendMessageAndClose() {
            try {
                // Use MessengerExtensions.getUserID to obtain the PSID
                MessengerExtensions.getUserID(
                    function success(uids) {
                        try {
                            var psid = uids.psid;
                            logMessage('User ID obtained: ' + psid);

                            // Send a message using the sendTextMessage function
                            sendTextMessage(psid, 'Hello, this is a message from your website!')
                                .then(() => {
                                    // The message was sent successfully
                                    logMessage('Message sent successfully');

                                    // Delay for 3 seconds before closing the web browser
                                    setTimeout(() => {
                                        // Close the web browser
                                        MessengerExtensions.requestCloseBrowser(function success() {
                                            // Browser closed successfully
                                            logMessage('Web browser closed');
                                        }, function error(err) {
                                            // Error closing the browser
                                            logError('Error closing web browser: ' + err);
                                        });
                                    }, 3000);
                                })
                                .catch((error) => {
                                    // Handle errors from sendTextMessage
                                    logError('Error sending message: ' + error.message);
                                });
                        } catch (err) {
                            logError('An error occurred during user ID obtaining: ' + err.message);
                        }
                    },
                    function error(err, errorMessage) {
                        // Error handling code
                        logError('Error obtaining user ID: ' + errorMessage);
                    }
                );
            } catch (err) {
                logError('An error occurred during the execution: ' + err.message);
            }
        }

        function logMessage(message) {
            var logContainer = document.getElementById('logContainer');
            var logEntry = document.createElement('div');
            logEntry.textContent = message;
            logContainer.appendChild(logEntry);

            // Scroll to the bottom of the log container
            logContainer.scrollTop = logContainer.scrollHeight;
        }

        function logError(error) {
            var errorContainer = document.querySelector('.error');
            var errorEntry = document.createElement('div');
            errorEntry.textContent = 'Error: ' + error;
            errorContainer.appendChild(errorEntry);
        }
    </script>
    <!-- Include the Messenger Extensions SDK -->
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "https://connect.facebook.com/en_US/messenger.Extensions.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'Messenger'));
    </script>
</head>
<body>
    <div class="error"></div>
    <div id="logContainer"></div>

    <!-- Add this button inside the body of your HTML document -->
    <button onclick="sendMessageAndClose()">Send Message and Close</button>
</body>
</html>
