<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redirection</title>
    <style>
        body {
            text-align: center;
            font-family: 'Cairo', Arial, sans-serif;
        }

        .error {
            color: red;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
    <!-- Include the Messenger Extensions SDK -->
    <script>
        window.extAsyncInit = function() {
            // the Messenger Extensions JS SDK is done loading
            MessengerExtensions.getUserID(
                function success(uids) {
                    // User ID was successfully obtained.
                    var psid = uids.psid;
                    console.log("psid", psid);
                    $('.error').html(psid);

                    // Send a message to the user
                    MessengerExtensions.sendMessageToUser(psid, {
                        text: 'Hello, this is a message from your website!'
                    }, function success() {
                        // The message was sent successfully
                        console.log('Message sent successfully');

                        // Close the web browser
                        MessengerExtensions.requestCloseBrowser(function success() {
                            // Browser closed successfully
                            console.log('Web browser closed');
                        }, function error(err) {
                            // Error closing the browser
                            console.log('Error closing web browser:', err);
                        });

                    }, function error(err) {
                        // Error sending the message
                        console.log('Error sending message:', err);
                    });

                },
                function error(err, errorMessage) {
                    // Error handling code
                    console.log(err, errorMessage);
                    $('.error').html(errorMessage);
                }
            );
        };
    </script>
    <!-- Include the Messe   nger Extensions SDK -->
   

<!-- Use HTTPS for script source -->
<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) { return; }
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.com/en_US/messenger.Extensions.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'Messenger'));
</script>

</head>
<body>
    <div class="error"></div>
</body>
</html>
